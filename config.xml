<?xml version='1.0' encoding='utf-8'?>
<widget id="com.megster.bluetooth.chat" version="2.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">    
    <name>OBD Chat</name>
    <description>
        A Sample Chat Application demonstrating the BluetoothSerial PhoneGap plugin.
    </description>
    <author email="don.coleman@gmail.com" href="http://megster.com">
        Don Coleman
    </author>
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="KeyboardShrinksView" value="true" />
    <preference name="DisallowOverscroll" value="true" />    
    <plugin name="cordova-plugin-bluetooth-serial" source="npm" />
    <plugin name="imeiplugin" source="npm" />
    <icon src="icon.png"/>
    <icon src="icon.png" gap:platform="ios" width="57" height="57"/>
    <icon src="icon-128.png" width="128" height="128" />
    <icon src="icon-256.png" width="256" height="256" gap:role="default" />
    <icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icon-120.png" gap:platform="ios" width="120" height="120" />
    <icon src="icon-152.png" gap:platform="ios" width="152" height="152" />
    <icon src="icon-114.png" gap:platform="ios" width="114" height="114" />
    <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />

    <icon src="www/res/icon/android/icon-36-ldpi.png" gap:platform="android" gap:qualifier="ldpi"/>
    <icon src="www/res/icon/android/icon-48-mdpi.png" gap:platform="android" gap:qualifier="mdpi"/>
    <icon src="www/res/icon/android/icon-72-hdpi.png" gap:platform="android" gap:qualifier="hdpi"/>
    <icon src="www/res/icon/android/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi"/>    
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>    
</widget>
